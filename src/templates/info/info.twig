
<div class="info">

	{% if PAGE_TYPE == 'success' %}
		<div class="msg-title msg-title-success">{{ dict.success[LANG] }}</div>
	{% elseif PAGE_TYPE == 'error' %}
		<div class="msg-title">{{ dict.error[LANG] }}</div>
		<div class="msg-desc">{{ dict.errorDesc[LANG] }}</div>
	{% else %}
		<div class="info-header">
			<h4 class="title">{{ dict.paymentDetails[LANG] }}</h4>
		</div>
	{% endif %}




            {% if PAGE_TYPE == 'success' %}
	<div class="details">
		<ul class="details-list">
				<li class="details-item">
					<div class="item-title">{{ dict.orderID[LANG] }}</div>
